{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "AdminLoginPassword": {
      "type": "securestring"
    },
    "SalesDacPacPath": {
      "type": "string"
    },
    "StreamingDacPacPath": {
      "type": "string"
    },
    "DacPacContainerSAS": {
      "type": "securestring"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "ohmdw"
    }
  },
  "variables": {
    "sqlServerName": "[concat(parameters('namePrefix'), '-sqlserver-', uniqueString(resourceGroup().id))]"},
  "resources": [
    {
      "name": "[variables('sqlServerName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[parameters('location')]",
      "apiVersion": "2019-06-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "[concat(parameters('namePrefix'), '-sqlserver')]"
      },
      "properties": {
        "administratorLogin": "[parameters('AdminLogin')]",
        "administratorLoginPassword": "[parameters('AdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "apiVersion": "2015-05-01-preview",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
          ],
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "CloudSales",
          "type": "databases",
          "location": "[parameters('location')]",
          "apiVersion": "2020-08-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
          ],
          "tags": {
            "displayName": "CloudSales"
          },
          "sku": {
            "name": "GP_S_Gen5",
            "tier": "GeneralPurpose",
            "family": "Gen5",
            "capacity": 2
          },
          "kind": "v12.0,user,vcore,serverless",
          "properties": {
              "collation": "SQL_Latin1_General_CP1_CI_AS",
              "maxSizeBytes": "34359738368",
              "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
              "zoneRedundant": false,
              "readScale": "Disabled",
              "autoPauseDelay": 60,
              "storageAccountType": "GRS",
              "minCapacity": 0.5
          },
          "resources": [
            {
              "name": "Import",
              "type": "extensions",
              "apiVersion": "2014-04-01",
              "dependsOn": [
                "[concat('Microsoft.Sql/servers/', variables('sqlServerName'), '/databases/CloudSales')]"
              ],
              "properties": {
                "storageKeyType": "SharedAccessKey",
                "storageKey": "[parameters('DacPacContainerSAS')]",
                "storageUri": "[parameters('SalesDacPacPath')]",
                "administratorLogin": "[parameters('AdminLogin')]",
                "administratorLoginPassword": "[parameters('AdminLoginPassword')]",
                "operationMode": "Import",
                "authenticationType": "SQL"
              }
            }
          ]
        },
        {
          "name": "CloudStreaming",
          "type": "databases",
          "location": "[parameters('location')]",
          "apiVersion": "2020-08-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
          ],
          "tags": {
            "displayName": "CloudStreaming"
          },
          "sku": {
            "name": "GP_S_Gen5",
            "tier": "GeneralPurpose",
            "family": "Gen5",
            "capacity": 2
          },
          "kind": "v12.0,user,vcore,serverless",
          "properties": {
              "collation": "SQL_Latin1_General_CP1_CI_AS",
              "maxSizeBytes": "34359738368",
              "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
              "zoneRedundant": false,
              "readScale": "Disabled",
              "autoPauseDelay": 60,
              "storageAccountType": "GRS",
              "minCapacity": 0.5
          },
          "resources": [
            {
              "name": "Import",
              "type": "extensions",
              "apiVersion": "2014-04-01",
              "dependsOn": [
                "[concat('Microsoft.Sql/servers/', variables('sqlServerName'), '/databases/CloudStreaming')]"
              ],
              "properties": {
                "storageKeyType": "SharedAccessKey",
                "storageKey": "[parameters('DacPacContainerSAS')]",
                "storageUri": "[parameters('StreamingDacPacPath')]",
                "administratorLogin": "[parameters('AdminLogin')]",
                "administratorLoginPassword": "[parameters('AdminLoginPassword')]",
                "operationMode": "Import",
                "authenticationType": "SQL"
              }
            }
          ]
        }
      ]
    }],
  "outputs": {}
}